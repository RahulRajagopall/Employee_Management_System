@model Employee
@{
    ViewData["Title"]="Task Assign";
    Layout="_Login";
}
<head>
    <Style>
        body 
        {
            background-image: url("https://img.freepik.com/free-photo/abstract-luxury-gradient-blue-background-smooth-dark-blue-with-black-vignette-studio-banner_1258-63483.jpg?w=900&t=st=1679307462~exp=1679308062~hmac=d439f6280f78604b3834f65357b10c2f7190fc7ded95a62ef720aa7e6f459ac0");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            overflow: hidden;
        }
        label
        {
            width: 8%;
        }       
        button
        {   
            width: 100px;
            height: 35px;
            background-color: rgb(31, 30, 30);
            border-radius: 1em;
            align-items: left;
            flex-direction: row;
            justify-content: left;
        }
        button:hover 
        {
            background-color:rgb(82, 21, 139);
            cursor: pointer;
        }
        .b1
        {
            display: block;
            margin-left: 9em;
            background-color: white;
            width: 100px;
            height: 35px;
            border-radius: 1em;
            background: rgb(34, 33, 33);
            color: rgb(247, 247, 247);
            cursor: pointer;
            margin-left: 0%;
            margin-top:-50px;
        }
        .b1:hover
        {
            background: rgb(82, 21, 139);
            color:white;
        }

    </Style>
</head>
<form method="post">
<br>
<h2 style="color: black;">Assign Task</h2><img style="margin-top: -7%;margin-left: 16%;" src="https://cdn-icons-png.flaticon.com/512/8474/8474695.png"width ="45px" height="45px" >

<br>
<p>
    <label asp-for="Task"> Enter Task</label>
    <input type="text" asp-for="Task" style="height: 100px;width: 500px;"/>
</p>
<p>
    <label asp-for="DeadLine"></label>
    <input type="date" asp-for="DeadLine" />
</p>
<div  style="max-height: 40px;width: 300px;height: 40px; border: 0.01px solid transparent;margin-top: -1%;margin-left:5%;color:red;">
<p style="color: red;margin-top: 2%;margin-left:-8%";">@ViewBag.EmptyFieldMessage</p>
<p style="margin-top: -10px;margin-left: 40px;color:red;">@ViewBag.TaskExistMessage</p>
</div>

<p>
    <button style="margin-left: 10%;color: white;" type="Submit">Submit</button>
    <button asp-controller="Admin" asp-action="TaskResult"  style="margin-left: 1%;color: rgb(247, 243, 243);" type="Submit" >View Tasks</button>
</p>
</form>
<form method="get" asp-controller="Admin" asp-action="Options">
<button class="b1" type="submit">Go Back</button>
</form>
<img style="margin-top: -26%;margin-left: 60%;" src="../images/task.png" width="500px" height="500px"/> 