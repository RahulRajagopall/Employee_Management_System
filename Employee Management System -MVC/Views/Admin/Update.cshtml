@model Employee
@{
    ViewData["Title"]="Update";
    Layout="_Login";
}
<head>
    <Style>
        body {
        background-image: url("https://img.freepik.com/free-photo/abstract-luxury-gradient-blue-background-smooth-dark-blue-with-black-vignette-studio-banner_1258-63483.jpg?w=900&t=st=1679307462~exp=1679308062~hmac=d439f6280f78604b3834f65357b10c2f7190fc7ded95a62ef720aa7e6f459ac0");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        overflow: hidden;
        }
        label
        {
            width: 10%;
        }
        .right label 
        {
            width:200px;
        }
      button
        {   
            width: 70px;
            height: 35px;
            background-color: rgb(31, 30, 30);
            border-radius: 1em;
            align-items: left;
            flex-direction: row;
            justify-content: left;
            margin-left: 15.2%;
            margin-top: 1.5%;          
        }
        button:hover 
        {
            background-color:rgb(82, 21, 139);
            cursor: pointer;
        }
    </Style>
</head>
<br>
<form method="post">
<h2 style="color: black;">Update Employee</h2><img style="margin-top: -7%;margin-left: 24%;" src="https://cdn-icons-png.flaticon.com/512/2546/2546743.png"width ="27px" height="27px" >
<h6 style="margin-top: -1.5%;">NOTE : Employee ID must be valid</h6>
<br>
<p>
    <label asp-for="EmployeeID"> Enter Id</label>
    <input type="number" asp-for="EmployeeID" placeholder="Employee ID"/>
</p>
<div style="max-height: 40px;width: 80px;height: 40px; border: 0.01px solid transparent;margin-top: 0%;margin-left: 160px;color:red;></div>
<p style="margin-left: 170px;color:red;">@ViewBag.InvalidIDmessage</p>
</div>
<p>
    <button style="width: 90px;margin-left: 13.2%;margin-top: -1%;color: white;" type="Submit">Submit</button>
</p>
</form>
<button style="margin-left: -5px;width: 90px;Height:35px;"><a style="color: white;text-decoration: none;" asp-action="Options">Go Back </a></button>
<img style="margin-top: -27%;margin-left: 55%;" src="../images/update.png" width="500px" height="500px"/> 